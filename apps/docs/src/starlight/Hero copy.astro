	.hero__content {
		min-width: 20rem;
	}
	.h1-wrap {
		--_col_B: rgb(61, 204, 240);
		--_col_C: rgb(136, 103, 255);
		background-image: linear-gradient(120deg, var(--_col_B), var(--_col_C));
	}
	h1[data-page-title] {
		/* font-family: var(--ff-accent); */
		letter-spacing: 0.025em;
		font-weight: bold;
		font-size: 4rem;
		text-shadow: 4px 4px 40px rgb(255 255 255 / 0.25);
	}
	.tagline {
		font-size: var(--fz-m);
		color: var(--c-text-2);
	}
</style>
