---
import { Lism, WithSide, Center, Icon } from 'lism-css/astro';
import PRESETS from './presets';
import './style.css';

const { type = 'alert', keycol, icon, isFlow, ...props } = Astro.props;

const presetData = type && PRESETS[type as keyof typeof PRESETS];
const _icon = icon || presetData?.icon || 'info';
const _color = keycol || presetData?.color || 'currentColor';
---

<WithSide lismClass='c--callout u--colbox' keycol={_color} p='30' g='30' bd bdrs='2' {...props}>
	<Center data-is-side lismClass='c--callout__icon' c='keycol' fz='xl'>
		<Icon icon={_icon} />
	</Center>
	<Lism lismClass='c--callout__body u--trimBox' isFlow={isFlow}>
		<slot />
	</Lism>
</WithSide>
